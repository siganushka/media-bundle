{
    "name": "siganushka/media-bundle",
    "description": "Media Bundle.",
    "keywords": ["media-bundle", "symfony-ux"],
    "homepage": "https://github.com/siganushka/media-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "siganushka",
            "email": "siganushka@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-fileinfo": "*",
        "knplabs/knp-components": "^5.0",
        "siganushka/doctrine-contracts": "dev-main",
        "siganushka/generic-bundle": "dev-main",
        "symfony/form": "^7.4|^8.0",
        "symfony/framework-bundle": "^7.4|^8.0",
        "symfony/serializer": "^7.4|^8.0",
        "symfony/validator": "^7.4|^8.0"
    },
    "require-dev": {
        "aliyuncs/oss-sdk-php": "^2.7",
        "obs/esdk-obs-php": "^3.0",
        "spatie/image-optimizer": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Siganushka\\MediaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Siganushka\\MediaBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "tools:run": [
            "tools/vendor/bin/php-cs-fixer fix",
            "tools/vendor/bin/twigcs",
            "tools/vendor/bin/simple-phpunit",
            "tools/vendor/bin/phpstan"
        ]
    }
}
